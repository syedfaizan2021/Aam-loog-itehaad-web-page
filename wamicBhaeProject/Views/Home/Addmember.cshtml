@model wamicBhaeProject.Models.addMemberClass
@{
    Layout = null;
}


@using (Html.BeginForm("Addmember", "Home", FormMethod.Post , new { enctype ="multipart/form-data"}))
{
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <form method="post">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                    <h4 class="modal-title" id="myModalLabel">Add Member</h4>

                </div>

                <div class="modal-body">

                    <div class="row">

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="Member's Name">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.memberName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Member's Name" } })

                        </div>

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="Father's Name">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.fatherName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Father's Name" } })


                        </div>

                    </div>

                    <div class="form-group">

                        @*<input type="text" data-inputmask="'mask':'9999999999999'" class="form-control" placeholder="CNIC" maxlength="13">*@
                        @Html.EditorFor(addmemberClass => addmemberClass.CNIC, new { htmlAttributes = new { @class = "form-control" @*@data-inputmask = "'mask':'9999999999999'"*@                                                                                                                                                                                /**/
                                                                                                                                                                                                        ,
                                                @placeholder = "CNIC",
                                                @maxlength = "13"
                                            }
                                        })


                    </div>

                    <div class="form-group">

                        @*<input type="text" class="form-control" placeholder="Street Address">*@
                        @Html.EditorFor(addmemberClass => addmemberClass.streetAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Street Address" } })


                    </div>

                    <div class="row">

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="Province">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.province, new { htmlAttributes = new { @class = "form-control", @placeholder = "Province" } })


                        </div>

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="Division">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.division, new { htmlAttributes = new { @class = "form-control", @placeholder = "Division" } })

                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="District">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.district, new { htmlAttributes = new { @class = "form-control", @placeholder = "District" } })


                        </div>

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="City">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.city, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })


                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="Tehsil">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.tehsil, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tehsil" } })


                        </div>

                        <div class="form-group form-inline col-md-4 col-xs-6">

                            @*<input type="text" class="form-control" placeholder="Union Council">*@
                            @Html.EditorFor(addmemberClass => addmemberClass.unioncouncil, new { htmlAttributes = new { @class = "form-control", @placeholder = "Union Council" } })


                        </div>

                    </div>

                    <div class="form-group">

                        @*<input type="text" class="form-control" placeholder="Mailing Address">*@
                        @Html.EditorFor(addmemberClass => addmemberClass.mailingAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mailing Address" } })


                    </div>

                    <div class="form-group">

                        @*<input type="text" data-inputmask="'mask':'99999999999'" class="form-control" placeholder="Mobile Number">*@
                        @Html.EditorFor(addmemberClass => addmemberClass.mobileNumber, new { htmlAttributes = new { @class = "form-control" @*@data - inputmask = "'mask':'99999999999'"*@                                                                                                                                                                                        /**/
                                                                                                                                                                                                                ,
                                                @placeholder = "Mobile Number"
                                            }
                                        })


                    </div>

                    <div class="form-group">

                        @*<input type="text" class="form-control" placeholder="Email Address">*@
                        @Html.EditorFor(addmemberClass => addmemberClass.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Address" } })



                    </div>

                    <!--labeled field

                    <div class="form-group">

                      <label>Father's Name</label>

                      <textarea name="editor1" class="form-control" placeholder="Page Body"></textarea>

                    </div>

                     -->

                    <div class="form-group">

                        <label for="exampleInputFile">Upload Photo</label>

                        <input type="file" id="InputFile" name="ImageFile">

                        <p class="help-block">File must not exceed 500kb</p>

                    </div>

                    <div class="modal-footer">

                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                        @*<button type="submit" class="btn btn-primary">Save Member</button>*@
                        <input type="submit" value="Create" class="btn btn-primary" />

                    </div>

            </form>

        </div>

    </div>
}